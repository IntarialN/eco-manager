{
  "name": "eco-manager/yii-app",
  "description": "Eco Manager client portal prototype on Yii2",
  "type": "project",
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ],
  "config": {
    "allow-plugins": {
      "yiisoft/yii2-composer": true
    }
  },
  "require": {
    "php": "^8.1",
    "yiisoft/yii2": "~2.0.49",
    "yiisoft/yii2-bootstrap5": "^2.0",
    "yiisoft/yii2-symfonymailer": "^2.0",
    "yiisoft/yii2-swiftmailer": "~2.0.0 || ~2.1.0",
    "bower-asset/bootstrap": "^5.2",
    "bower-asset/font-awesome": "^5.15",
    "twbs/bootstrap-icons": "^1.11"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "yiisoft/yii2-debug": "^2.1",
    "yiisoft/yii2-gii": "^2.2",
    "yiisoft/yii2-faker": "^2.0"
  },
  "scripts": {},
  "extra": {
    "branch-alias": {
      "dev-master": "2.0.x-dev"
    }
  }
}
